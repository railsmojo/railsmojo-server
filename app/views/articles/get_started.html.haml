                          %span.font-bold= category.try(:name)                 

                      %p.py-3.text-gray-500.text-sm.dark:text-gray-400{class: "w-4/5"}= category.try(:description)
                      = link_to articles_path(category_id: category.id) do
                        .mt-2.text-xs.text-gray-500.uppercase.flex.items-center.hover:text-rose-500
