%h1 Listing categories

%table
  %thead
    %tr
      %th Rails version
      %th Name
      %th Slug
      %th Position
      %th Is active
      %th
      %th
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.rails_version
        %td= category.name
        %td= category.slug
        %td= category.position
        %td= category.is_active
        %td= link_to 'Show', category
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Category', new_category_path
