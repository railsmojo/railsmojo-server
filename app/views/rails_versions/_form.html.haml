= form_for @rails_version do |f|
  - if @rails_version.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rails_version.errors.count, "error")} prohibited this rails_version from being saved:"
      %ul
        - @rails_version.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :is_default
    = f.check_box :is_default
  .field
    = f.label :is_active
    = f.check_box :is_active
  .actions
    = f.submit 'Save'
